@require './base.styl'

.widgets {
  width 250px
  position absolute
  left 8px
  top @left
  background rgba(255, 255, 255, 0.9)
}

.floor-list-widget {
  margin-top 16px
  border 1px solid steelblue
  .title {
    @extends $widget-title
  }
  .floor-list {
    .floor-item {
      position relative
      display flex
      height 32px
      border-top 1px solid steelblue
      &:first-child {
        border-top none
      }
      cursor pointer
      transition background 0.3s ease-in
      &:hover {
        background rgba(51, 51, 51, 0.25)
      }

      .bar {
        position absolute
        left 0
        top 0
        bottom 0
      }

      .floor-text {
        width 160px
        line-height 32px
        padding-left 8px
        margin 0
        .count {
          margin-left 8px
        }
      }
      .floor-radio {
        display block
        height 25px
        width 16px
        margin-left auto
        margin-right 4px
        pointer-events none
      }
    }
  }
}
