$flat-button {
  height 24px
  line-height @height
  border none
  padding-top 0
  padding-bottom 0
  font-size 12px
  cursor pointer
}

$widget-title {
  font-size 14px
  line-height 24px
  margin 0
  background steelblue
  color white
  font-weight bold
  text-align center
}

mdl-box-shadow(r, g, b) {
//box-shadow 0 2px 2px 0 rgba(r, g, b, .14), \
//0 3px 1px -2px rgba(r, g, b, .2), \
//0 1px 5px 0 rgba(r, g, b, .12)
  box-shadow 0 2px 10px 2px rgba(r, g, b, .3)
  transition box-shadow 300ms
}
