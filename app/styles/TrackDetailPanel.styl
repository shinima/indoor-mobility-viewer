@require './base.styl'

.track-detail-panel {
  position absolute
  right 0
  border 1px solid steelblue
  background white

  .title {
    position relative
    font-size 14px
    line-height 24px
    margin 0
    background steelblue
    color white
    font-weight bold
    text-align center

    .close {
      border none
      background #10558e
      color white
      position absolute
      left 0
      top 0
      bottom 0
      width 24px
      cursor pointer
    }
  }

  .track-list {
    max-height 500px
    overflow-y auto
    padding 0 16px
  }

  .track {
    width 320px
    margin-bottom 16px
    padding 4px
    mdl-box-shadow(0, 0, 0)
    &:hover {
      mdl-box-shadow(255, 0, 0)
    }
    &:first-child {
      margin-top 16px
    }

    .track-id {
      margin 0
    }

    .track-point-list {
      list-style none
      margin 0
      padding 0
      .track-point {
        display flex
        align-items center
        height 32px
        line-height @height
        cursor default
        &.highlighted {
          background antiquewhite
        }

        .symbol {
          width 20px
          &.circle {
            padding 0 2px
          }
        }

        .time {
          margin-left 8px
        }
      }
    }
  }
}
