@require './base.styl'

.mac-list-widget {
  border 1px solid steelblue

  .title {
    @extends $widget-title
  }

  .mac-list {
    display flex
    flex-flow column

    .mac-item {
      display flex
      align-items center
      height 32px
      border-top 1px solid steelblue
      &:first-child {
        border-top none
      }

      .mac-color > .color {
        width 16px
        height 16px
        margin 8px
        border-radius 50%
        cursor pointer
        border none
        outline none
        &:hover {
          box-shadow 0 0 12px 0 rgba(255, 0, 0, 0.4)
        }
      }

      .mac-text {
        width 160px
        margin 0
        margin-left 5px
        line-height @height
        font-size 14px
        font-family Consolas, monospace, 'microsoft yahei'
      }

      .mac-delete {
        @extends $flat-button
        margin-left auto
        width 18px
        height 18px
        margin-right 10px
      }

      .mac-check {
        display block
        height @height
        width 16px
        margin-left 8px
        margin-right 4px
      }
    }
  }

  .empty-mac-item-list {
    height 32px
    font-size 16px
    display flex
    align-items center
    justify-content center
    border-top none
  }

  .new-mac-item {
    padding-left 10px
    height 32px
    display flex
    justify-content space-around
    align-items center
    border-top 1px solid steelblue

    input {
      width 150px
      height 24px
      font-family Consolas, monospace, 'microsoft yahei'
    }

    button {
      @extends $flat-button
      margin-left auto
      margin-right 4px
    }
  }

}
