@require './base.styl'

.legend {
  padding-left 40px
  padding-bottom 18px
  border-bottom 1px solid #ccc

  .title {
    @extends $widget-title
  }

  .list {
    display flex
    flex-flow column

    .list-item {
      display flex
      align-items center
      width 240px
      height 32px

      .color {
        padding 0
        width 16px
        height @width
        margin-left 4px
        margin-right 16px
        border none
        outline none
      }

      .text {
        margin 0
        margin-right auto
        line-height @height
        font-size 16px
        font-family Consolas, 'microsoft yahei', monospace
      }
    }
  }
}
