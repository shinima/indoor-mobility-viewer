@require './base.styl'

.timeline-panel {
  position absolute
  right 0
  top 0
  bottom 0
  z-index 2
  display flex
  flex-direction column
  width 400px
  background #f8f9fd

  .title {
    @extends $widget-title
    padding-left 20px
    font-size 20px
    text-align center
  }

  .content {
    display flex
    align-items flex-start
    padding-left 16px
    overflow-y auto

    .list {
      flex-grow 1
      display flex
      flex-direction column

      .item {
        display flex
        position relative

        > p {
          margin 0
        }
      }
    }
  }
}
