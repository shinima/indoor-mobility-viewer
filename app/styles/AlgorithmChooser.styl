@require './base.styl'

.algorithms-chooser {
  padding-left 70px
  padding-bottom 18px
  border-bottom 1px solid #ccc

  .title {
    @extends $widget-title
    margin-bottom 6px
  }

  .label {
    display inline-block
    width 160px
  }

  .arg-row {
    margin 6px 0
    display flex
    align-items center

    &.flex-align-start {
      align-items flex-start
    }

    .no-shrink {
      flex-shrink 0
    }

    .button-list {
      flex 1 0
      display flex
      flex-wrap wrap
    }
  }

  .submit-button {
    @extends $btn-base
    margin-top 8px
  }
}
